@* @inject HttpClient HttpClient

<RadzenPanelMenu Multiple=true>
    @if(!AppState.ManifestLoaded)
    {
        <RadzenPanelMenuItem Text="Loading..." Style="cursor: not-allowed; pointer-events: none" />
    }
    @if (AppState.StandaloneMarkdownPosts.Any())
    {
        foreach (string post in AppState.StandaloneMarkdownPosts)
        {
            <MarkdownPostLink MarkdownFilePath=@($"{post}") />
        }
    }
    @if (AppState.NestedMarkdownPosts.Any())
    {
        foreach (KeyValuePair<string, List<string>> nestedMarkdownPost in AppState.NestedMarkdownPosts)
        {
            <RecursiveNavMenu NestedMarkdownPosts=@nestedMarkdownPost />
        }
    }
</RadzenPanelMenu>

@code {
    [CascadingParameter] private CascadingAppState AppState {get;set;}    
} *@
