@inject ThemeService ThemeService

<div style="margin-right: 5px">
    <RadzenDropDown TValue="string" 
                    Value=@ThemeService.Theme 
                    ValueChanged=@ChangeTheme 
                    Data=@_freeLightThemes 
                    TextProperty=@nameof(Theme.Text) 
                    ValueProperty=@nameof(Theme.Value)
    />
</div>

@code {
    private IEnumerable<Theme> _freeLightThemes = Themes.Free.
        Where(theme => !theme.Value.Contains("dark", StringComparison.OrdinalIgnoreCase));
    
    private void ChangeTheme(string value)
    {
        ThemeService.SetTheme(value);
    }
}